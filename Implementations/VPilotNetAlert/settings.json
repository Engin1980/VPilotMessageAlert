{
  "Logging": {
    "Level": "TRACE",
    "FileName": "_log.txt"
  },
  "Tasks": {
    "ContactMe": {
      "Enabled": true,
      "FrequencyRegex": "^Contact me.+(1\\d{2}[\\\\.,]\\d+)$",
      "RepeatSoundInterval": null,
      "AudioFile": {
        "Name": "Sounds\\ring.mp3",
        "Volume": 1
      }
    },
    "NoFlightPlan": {
      "Enabled": true,
      "DetectionOnParkingBrake": true,
      "DetectionOnHeight": 3000,
      "DetectionInterval": 60,
      "AudioFile": {
        "Name": "Sounds\\noFlightPlan.mp3",
        "Volume": 1
      }
    },
    "ImportantRadioMessage": {
      "Enabled": true,
      "AudioFile": {
        "Name": "Sounds\\bell.mp3",
        "Volume": 1
      }
    },
    "Disconnected": {
      "Enabled": true,
      "RepeatInterval": 10,
      "AudioFile": {
        "Name": "Sounds\\disconnect.mp3",
        "Volume": 1
      }
    }
  },
  "Vatsim": {
    "Sources": [ "https://data.vatsim.net/v3/vatsim-data.json" ],
    "NoFlightPlanUpdateInterval": 2,
    "RefreshFlightPlanUpdateInterval": 10
  },
  "Global": {
    "SendPrivateMessageWhenConnectedForTheFirstTime": true,
    "SendPrivateMessageWhenFlightPlanDetected": true
  }
}